<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>avi</servlet-name><!-- logical name-->
        <servlet-class>servlet.SumOfServlet</servlet-class><!-- packageName.className -->
    </servlet>
    <servlet-mapping>
        <servlet-name>avi</servlet-name><!-- logical name, same as above-->
        <url-pattern>/sum</url-pattern><!-- url to invoke servlet -->
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
</web-app>
